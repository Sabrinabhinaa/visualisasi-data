# 1. Matplotlib

import matplotlib.pyplot as plt

# Data sample
months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec']
product_A_sales = [10,20,15,25,30,45,40,50,60,55,65,70]
product_B_sales = [5,10,8,15,18,20,22,30,25,35,40,45]

plt.figure(figsize=(10,6))

# Line Plot
plt.plot(months, product_A_sales, label='Product A')
plt.plot(months, product_B_sales, label='Product B')

plt.title('Penjualan Produk Per Bulan')
plt.xlabel('Bulan')
plt.ylabel('Jumlah Penjualan')
plt.legend()

# Kelompok
plt.text(0.5, 1.05, "KELOMPOK 12", ha='center', fontsize=14, fontweight='bold', transform=plt.gcf().transFigure)
plt.text(0.5, 1.01, "Sabrina Ramadhani - 0110222068", ha='center', fontsize=11, transform=plt.gcf().transFigure)
plt.text(0.5, 0.97, "Distia Fajar Familiati - 0110222163", ha='center', fontsize=11, transform=plt.gcf().transFigure)
plt.text(0.5, 0.93, "Muhammad Fariz Zacky - 0110222227", ha='center', fontsize=11, transform=plt.gcf().transFigure)

plt.tight_layout()
plt.show()

